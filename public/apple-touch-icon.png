<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 180 180" fill="none">
  <defs>
    <linearGradient id="bg180" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4FD1C7"/>
      <stop offset="100%" style="stop-color:#38BDF8"/>
    </linearGradient>
    <linearGradient id="chatbg180" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF"/>
      <stop offset="100%" style="stop-color:#F0F9FF"/>
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <dropShadow dx="0" dy="4" stdDeviation="4" flood-color="#000000" flood-opacity="0.1"/>
    </filter>
  </defs>
  
  <!-- Background vá»›i rounded corners -->
  <rect width="180" height="180" rx="40" fill="url(#bg180)"/>
  
  <!-- Decorative circles -->
  <circle cx="45" cy="45" r="8" fill="#FFFFFF" opacity="0.2"/>
  <circle cx="135" cy="45" r="12" fill="#FFFFFF" opacity="0.15"/>
  <circle cx="45" cy="135" r="6" fill="#FFFFFF" opacity="0.25"/>
  
  <!-- Main chat bubble -->
  <rect x="30" y="60" width="120" height="70" rx="35" fill="url(#chatbg180)" filter="url(#shadow)" stroke="#2DD4BF" stroke-width="2"/>
  
  <!-- Chat bot eyes -->
  <circle cx="75" cy="90" r="12" fill="#1E40AF"/>
  <circle cx="105" cy="90" r="12" fill="#1E40AF"/>
  <!-- Eye highlights -->
  <circle cx="78" cy="87" r="5" fill="#FFFFFF"/>
  <circle cx="108" cy="87" r="5" fill="#FFFFFF"/>
  <circle cx="80" cy="85" r="2" fill="#FFFFFF"/>
  <circle cx="110" cy="85" r="2" fill="#FFFFFF"/>
  
  <!-- Smile -->
  <path d="M75 105 Q90 115 105 105" stroke="#1E40AF" stroke-width="3" fill="none" stroke-linecap="round"/>
  
  <!-- Chat bubble tail -->
  <path d="M50 130 L70 110 L50 110 Z" fill="url(#chatbg180)" stroke="#2DD4BF" stroke-width="2"/>
  
  <!-- Small text indicator -->
  <text x="90" y="155" font-family="Arial, sans-serif" font-size="12" fill="#1E40AF" text-anchor="middle" opacity="0.8">Wutip</text>
</svg>
